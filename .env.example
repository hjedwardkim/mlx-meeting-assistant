# HuggingFace Token for pyannote.audio models
# Get token at: https://hf.co/settings/tokens
# Must accept conditions for:
# - https://hf.co/pyannote/speaker-diarization-3.1
# - https://hf.co/pyannote/segmentation-3.0
HUGGINGFACE_TOKEN=your_token_here

# Default diarization settings
DEFAULT_DIARIZATION_MODEL=pyannote/speaker-diarization-3.1
DEFAULT_MIN_SPEAKERS=2
DEFAULT_MAX_SPEAKERS=10

# MLX Whisper transcription options
# Temperature for sampling (0.0 = deterministic, higher = more random)
WHISPER_TEMPERATURE=0.0

# Silence threshold - probability threshold for non-speech
WHISPER_NO_SPEECH_THRESHOLD=0.6

# Log probability threshold for accepting a segment
WHISPER_LOGPROB_THRESHOLD=-1.0

# Compression ratio threshold to detect repetitive transcriptions
# Lower values are more sensitive to repetition
WHISPER_COMPRESSION_RATIO_THRESHOLD=2.4

# Whether to condition on previous text (can cause repetition if True)
WHISPER_CONDITION_ON_PREVIOUS_TEXT=false

# Optional: Override default models
# DEFAULT_TRANSCRIPTION_MODEL=mlx-community/whisper-large-v3-mlx
# DEFAULT_SUMMARIZATION_MODEL=mlx-community/Qwen3-30B-A3B-8bit

# Optional: Default output directories
# DEFAULT_TRANSCRIPTIONS_DIR=./transcriptions
# DEFAULT_SUMMARIES_DIR=./summaries
